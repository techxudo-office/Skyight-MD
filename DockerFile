# Stage 1: Build
FROM node:20-alpine AS builder
WORKDIR /Skyight-Dashboard
COPY package*.json ./
ENV NODE_OPTIONS="--max-old-space-size=4096"
RUN npm ci
COPY . .
RUN npm run build

# Stage 2: Serve with Nginx
FROM nginx:alpine
COPY --from=builder /Skyight-Dashboard/dist /usr/share/nginx/html
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
